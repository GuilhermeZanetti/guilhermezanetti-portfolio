---
import Layout from '../../layouts/Layout.astro';
import { projects } from '../../data/projects';

export function getStaticPaths() {
  return projects
    .filter((project) => !!project.slug)
    .map((project) => ({
      params: { slug: project.slug },
      props: { project },
    }));
}

const { project } = Astro.props;
---

<Layout title={`${project.title} | Guilherme Zanetti`}>
  <main class="min-h-screen pt-24 pb-12 px-6">
    <div class="max-w-4xl mx-auto">
      {/* Back Button */}
      <a 
        href="/" 
        class="inline-flex items-center gap-2 text-slate-400 hover:text-indigo-400 transition-colors mb-8 group"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:-translate-x-1 transition-transform">
          <path d="M19 12H5"/><path d="m12 19-7-7 7-7"/>
        </svg>
        Voltar para Home
      </a>

      {/* Hero Header */}
      <div class="space-y-6 mb-12">
        <div class="flex items-center gap-3">
          <span class="text-sm font-semibold px-4 py-1.5 rounded-full bg-indigo-500/10 text-indigo-400 border border-indigo-500/20">
            {project.tag}
          </span>
          {project.year && <span class="text-slate-500">{project.year}</span>}
        </div>

        <h1 class="text-4xl sm:text-5xl font-bold text-slate-100 bg-clip-text text-transparent bg-gradient-to-r from-slate-100 to-slate-400">
          {project.title}
        </h1>

        <div class="flex flex-wrap gap-4 items-center">
            <div class="flex flex-wrap gap-2">
                {project.stack.split(',').map((tech) => (
                    <span class="px-3 py-1 bg-slate-800 text-slate-300 rounded-md text-sm border border-slate-700">
                        {tech.trim()}
                    </span>
                ))}
            </div>
            
            {project.repository && (
                <a 
                    href={project.repository} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 px-4 py-1.5 bg-slate-800 hover:bg-slate-700 text-white rounded-lg border border-slate-700 transition-colors text-sm font-medium"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                    Ver no GitHub
                </a>
            )}
        </div>
      </div>

      {/* Main Content */}
      <article class="prose prose-invert prose-lg max-w-none prose-headings:text-indigo-300 prose-a:text-indigo-400 hover:prose-a:text-indigo-300">
        <div class="bg-slate-900/50 backdrop-blur-sm border border-slate-800 rounded-2xl p-8 mb-12">
            <p class="text-slate-300 leading-relaxed text-lg mb-8">
                {project.description}
            </p>
            
            {/* Gallery */}
            {project.gallery && (
                <div class="space-y-8 my-12">
                    <h3 class="text-2xl font-bold text-slate-100 mb-6">Galeria do Projeto</h3>
                    <div class="grid gap-6">
                        {project.gallery.map((image) => (
                            <div class="rounded-xl overflow-hidden border border-slate-800 shadow-2xl">
                                <img src={image} alt={`Captura de tela do projeto ${project.title}`} class="w-full h-auto" />
                            </div>
                        ))}
                    </div>
                </div>
            )}
            
            {/* PDF Download */}
            {project.pdf && (
                <div class="mt-12 p-8 bg-slate-950/50 rounded-xl border border-slate-800 flex flex-col items-center text-center">
                    <h3 class="text-xl font-bold text-slate-100 mb-2">Documentação Completa</h3>
                    <p class="text-slate-400 mb-6">Acesse a documentação detalhada e a apresentação do projeto.</p>
                    <a 
                        href={project.pdf} 
                        target="_blank"
                        class="inline-flex items-center gap-2 px-6 py-3 bg-indigo-600 hover:bg-indigo-500 text-white rounded-xl font-semibold transition-all hover:shadow-lg hover:shadow-indigo-500/30"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" x2="12" y1="15" y2="3"/></svg>
                        Baixar Apresentação (PDF)
                    </a>
                </div>
            )}

            {/* Empty State Fallback */}
            {!project.gallery && !project.pdf && (
                <div class="mt-8 p-6 bg-slate-950/50 rounded-xl border border-dashed border-slate-800">
                    <p class="text-slate-500 italic text-center">
                        Mais detalhes serão adicionados em breve.
                    </p>
                </div>
            )}
        </div>
      </article>

    </div>
  </main>
</Layout>
